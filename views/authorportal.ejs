    <style>
        :root {
          --bg-gradient: linear-gradient(135deg, #fae8ea 0%, #f5f0f6 50%, #e5f5ee 100%);
          --primary: #edccd2;
          --soft-purple: #f5f0f6;
          --soft-green: #e5f5ee;
          --leaf-green: #a6c8b5;
          --brand-deep: #463b38;
          --headline: #22212a;
          --text: #4a4a56;
          --text-light: #6b6b78;
