    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>

    <script>
    $(document).ready(function() {
        $('#summernote').summernote({
            fontNames: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            fontNamesIgnoreCheck: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            lineHeights: ['1', '1.2', '1.5', '2', '2.5', '3'],
            height: null, 
            minHeight: null, 
            maxHeight: null, 
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'strikethrough']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['misc', ['undo', 'redo']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '24', '28', '32', '36', '48'],
            styleTags: [
                'p',
                { title: 'Blockquote', tag: 'blockquote', className: '', value: 'blockquote' },
                'pre', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
            ],
            placeholder: 'Begin Your Article...',
            disableResizeEditor: false
        });
    });

    function submitContent() {
        const submitBtn = document.querySelector('.submit-btn');
        const html = $('#summernote').summernote('code');
        const textContent = html.replace(/<[^>]*>/g, '').trim();
        const title = document.getElementById('title').value.trim();
        const department = document.getElementById('Department').value;
        
        if (!textContent) {
            showStatus('‚ùå Please enter some content for your article.', 'error');
            return;
        }
        
        if (!title) {
            showStatus('‚ùå Please enter a title for your article.', 'error');
            return;
        }
        
        if (!department) {
            showStatus('‚ùå Please select a department.', 'error');
            return;
        }
        
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ Submitting...';
        }
        
        showStatus('üì§ Submitting your article...', '');
        
        fetch('/submit-article', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                html: html,
                title: title,
                department: department,
                timestamp: new Date().toISOString(),
                wordCount: textContent.split(/\s+/).length
            })
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('Submission failed');
            }
        })
        .then(result => {
            showStatus('‚úÖ Article submitted successfully!', 'success');
            if (result.redirectUrl) {
                setTimeout(() => {
                    window.location.href = result.redirectUrl;
                }, 1500);
            }
        })
        .catch(error => {
            console.error('Submit error:', error);
            showStatus('‚ùå Network error. Please try again.', 'error');
        })
        .finally(() => {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'üì§ Submit Article';
            }
        });
    }

    function showStatus(message, type) {
        const statusEl = document.getElementById('status');
        if (statusEl) {
            statusEl.textContent = message;
            statusEl.className = `status-message ${type}`;
        }
    }

    function extractTitle(html) {
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = html;
        const h1 = tempDiv.querySelector('h1');
        const h2 = tempDiv.querySelector('h2');
        const firstParagraph = tempDiv.querySelector('p');
        
        if (h1) return h1.textContent;
        if (h2) return h2.textContent;
        if (firstParagraph) {
            const text = firstParagraph.textContent;
            return text.length > 50 ? text.substring(0, 50) + '...' : text;
        }
        return 'Untitled Article';
    }
    </script>
