<body>
    <div class="sidebar">
        <div class="logo" onclick="location.href='/'">
            <img src="/resources/logo.png" alt="DigiteX Logo">
            <span class="logofont">DigiteX</span>
        </div>
        <nav class="nav-links" role="navigation" aria-label="Primary">
            <a href="/authorportal" class="nav-link"><span class="icon">üè†</span>Dashboard</a>
            <a href="/New" class="nav-link"><span class="icon">üìù</span>New Post</a>
            <a href="#" class="nav-link active"><span class="icon">‚úèÔ∏è</span>Edit Article</a>
        </nav>
    </div>
    
    <div class="main">
        <div class="header-section">
            <h1 class="header-title">Edit Article ‚úèÔ∏è</h1>
            <div class="button-group">
                <button class="delete-btn" onclick="deleteArticle()">üóëÔ∏è Delete Article</button>
                <button class="submit-btn" onclick="updateArticle()">üíæ Update Article</button>
            </div>
        </div>
        
        <div class="details">
            <input type="text" id="title" placeholder="Article Title" value="<%- JSON.stringify(article.title).slice(1, -1) %>">
            <select id="Department" name="Department">
                <option value="" disabled>Select Department</option>
                <option value="general" <%= article.department === 'general' ? 'selected' : '' %>>General</option>
                <option value="Technology" <%= article.department === 'Technology' ? 'selected' : '' %>>Technology</option>
                <option value="Business" <%= article.department === 'Business' ? 'selected' : '' %>>Business</option>
                <option value="Medicine" <%= article.department === 'Medicine' ? 'selected' : '' %>>Medicine</option>
            </select>
        </div>

        <div class="editor-container">
            <div id="summernote"></div>
        </div>

        <div id="status" class="status-message"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>

    <script>
    const articleId = <%= article.id %>;
    const originalContent = <%- JSON.stringify(article.html) %>;
    
    $(document).ready(function() {
        $('#summernote').summernote({
            fontNames: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            fontNamesIgnoreCheck: ['Arial', 'Roboto', 'Open Sans', 'Lato'],
            lineHeights: ['1', '1.2', '1.5', '2', '2.5', '3'],
            height: null, 
            minHeight: null, 
            maxHeight: null, 
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'strikethrough']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['misc', ['undo', 'redo']]
            ],
            fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '24', '28', '32', '36', '48'],
            styleTags: [
                'p',
                { title: 'Blockquote', tag: 'blockquote', className: '', value: 'blockquote' },
                'pre', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
            ],
            placeholder: 'Edit your article content...',
            disableResizeEditor: false
        });
        
        // Set the initial content
        $('#summernote').summernote('code', originalContent);
        
        // Debug: Log the original HTML content
        console.log('Original HTML content:', originalContent);
    });

    function updateArticle() {
        const submitBtn = document.querySelector('.submit-btn');
        const html = $('#summernote').summernote('code');
        const textContent = html.replace(/<[^>]*>/g, '').trim();
        const title = document.getElementById('title').value.trim();
        const department = document.getElementById('Department').value;
        
        if (!textContent) {
            showStatus('‚ùå Please enter some content for your article.', 'error');
            return;
        }
        
        if (!title) {
            showStatus('‚ùå Please enter a title for your article.', 'error');
            return;
        }
        
        if (!department) {
            showStatus('‚ùå Please select a department.', 'error');
            return;
        }
        
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ Updating...';
        }
        
        showStatus('üì§ Updating your article...', '');
        
        fetch(`/update-article/${articleId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                html: html,
                title: title,
                department: department,
                timestamp: new Date().toISOString(),
                wordCount: textContent.split(/\s+/).length
            })
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('Update failed');
            }
        })
        .then(result => {
            showStatus('‚úÖ Article updated successfully!', 'success');
            if (result.redirectUrl) {
                setTimeout(() => {
                    window.location.href = result.redirectUrl;
                }, 1500);
            }
        })
        .catch(error => {
            console.error('Update error:', error);
            showStatus('‚ùå Network error. Please try again.', 'error');
        })
        .finally(() => {
            if (submitBtn) {
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'üíæ Update Article';
            }
        });
    }

    function deleteArticle() {
        if (!confirm('Are you sure you want to delete this article? This action cannot be undone.')) {
            return;
        }
        
        const deleteBtn = document.querySelector('.delete-btn');
        
        if (deleteBtn) {
            deleteBtn.disabled = true;
            deleteBtn.innerHTML = '‚è≥ Deleting...';
        }
        
        showStatus('üóëÔ∏è Deleting article...', '');
        
        fetch(`/delete-article/${articleId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('Delete failed');
            }
        })
        .then(result => {
            showStatus('‚úÖ Article deleted successfully!', 'success');
            setTimeout(() => {
                window.location.href = '/authorportal';
            }, 1500);
        })
        .catch(error => {
            console.error('Delete error:', error);
            showStatus('‚ùå Network error. Please try again.', 'error');
        })
        .finally(() => {
            if (deleteBtn) {
                deleteBtn.disabled = false;
                deleteBtn.innerHTML = 'üóëÔ∏è Delete Article';
            }
        });
    }

    function showStatus(message, type) {
        const statusEl = document.getElementById('status');
        if (statusEl) {
            statusEl.textContent = message;
            statusEl.className = `status-message ${type}`;
            
            // Auto-hide success messages after 5 seconds
            if (type === 'success') {
                setTimeout(() => {
                    statusEl.textContent = '';
                    statusEl.className = 'status-message';
                }, 5000);
            }
        }
    }

    // Add keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        // Ctrl+S to save
        if (e.ctrlKey && e.key === 's') {
            e.preventDefault();
            updateArticle();
        }
        // Ctrl+Delete to delete (with confirmation)
        if (e.ctrlKey && e.key === 'Delete') {
            e.preventDefault();
            deleteArticle();
        }
    });
    </script>
